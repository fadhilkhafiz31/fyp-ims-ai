rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: users can create/read/update their own document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Allow admins to read all users (for role management)
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin'];
      // Allow admins to create and update user documents (for staff management)
      allow create, update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Allow admins to delete user documents (for staff management)
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user has admin or staff role
    function isAdminOrStaff() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
    }
    
    // Inventory collection: authenticated users can read, only admins/staff can write
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if isAdminOrStaff();
    }
    
    // Transactions collection: authenticated users can read, only admins/staff can write
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow write: if isAdminOrStaff();
    }
    
    // StoreId collection: allow public read (for About/Contact pages), authenticated users can read (for store selection dropdown)
    match /storeId/{storeDocId} {
      allow read: if true; // Allow public read for About/Contact pages
      allow write: if isAdminOrStaff();
    }
    
    // Contact messages collection: allow public write (for contact form)
    match /contact_messages/{messageId} {
      allow create: if true; // Allow anyone to create contact messages
      allow read: if isAdminOrStaff(); // Only admin/staff can read messages
    }
    
    // Redeemed codes collection: customers can read their own redemptions, admins can read all
    match /redeemedCodes/{codeId} {
      // Customers can read their own redemptions
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      // Admins can read all redemptions
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Cloud Functions (server-side) can create/update via admin SDK, no client write needed
      allow write: if false; // No client-side writes - only via Cloud Functions
    }
  }
}


